<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.jomblo_terhormat.referensifilm.activity.AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Program Referensi Film Sederhana"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="19sp" />


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/meh" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Ahmad Mukhlis Saputra"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/klikfb"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/logofb" />

            <ImageButton
                android:id="@+id/klikgithub"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/logogithub" />

            <ImageButton
                android:id="@+id/klikgplus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/logogplus" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tmdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tmdb" />

    </LinearLayout>

</ScrollView>
